@using Online_Tic_Oto.Models.Sınıflar
@model List<SatisHaraket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Detay</h2>
<br />
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var a in Model)
    {
        <tr>
            <td>@a.SatisID</td>
            <td>@a.Urun.UrunAD</td>
            <td>@a.Cariler.CariADI @a.Cariler.CariSoyadı</td>
            <td>@a.Personel.PersonelAD  @a.Personel.PersonelSoyad</td>
            <td>@a.Adet</td>
            <td>@a.Fiyat</td>
            <td>@a.ToplamTutar</td>
            <td>@a.Tarih.ToString("dd.MM.yyyy")</td>
        </tr>
    }

</table>
<button class="btn btn-primary btn-sm">Yazdır</button>