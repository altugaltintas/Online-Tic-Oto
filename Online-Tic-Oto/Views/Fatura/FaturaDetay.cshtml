@using Online_Tic_Oto.Models.Sınıflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Fatura Detay </h2>
<br />
<ol class="breadcrumb mb-4" style="background-color: #f2f2f2; border-radius:10px; padding:10px;">
    <li class="breadcrumb-item active" style="margin-left:10px;">   Fatura No: @ViewBag.dft</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Fatura Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>      
    </tr>
    @foreach (var a in Model)
    {
        <tr>
            <td>@a.FaturaAciklama</td>
            <td>@a.Miktar</td>
            <td>@a.BirimFiyat</td>
            <td>@a.Tutar</td>            
        </tr>
    }
</table>
<a href="/Fatura/FaturaKalemEkle" class="btn btn-primary">Yeni Kalem Giriş</a>

