@using Online_Tic_Oto.Models.Sınıflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Kategori Listesi</h4>
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var k in Model)
    {
        if (!string.IsNullOrEmpty(k.KategoriADI))
        {
            <tr>
                <td>@k.KategoriID</td>
                <td>@k.KategoriADI</td>
                <td><a href="#" class="btn btn-danger" onclick="confirmDelete('@k.KategoriID')">Sil</a></td>
                <td><a href="/Kategori/KategoriGetir/@k.KategoriID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    }
</table>
   <a href="/Kategori/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>
   <script>
    function confirmDelete(kategoriID) {
        if (confirm('Bu kategoriyi silmek istediğinize emin misiniz?')) {
            // Kullanıcı "Evet" dediğinde silme işlemini gerçekleştirin
            window.location.href = '/Kategori/KategoriSil/' + kategoriID;
        }
    }
   </script>